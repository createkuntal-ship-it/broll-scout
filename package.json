{
  "name": "broll-scout",
  "version": "1.0.0",
  "description": "AI-powered B-Roll research tool for video editors",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win"
  },
  "build": {
    "appId": "com.brollscout.app",
    "productName": "B-Roll Scout",
    "directories": { "output": "dist" },
    "mac": {
      "category": "public.app-category.video",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "files": ["src/**/*", "node_modules/**/*"]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
